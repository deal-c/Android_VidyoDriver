<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"

    >

    <RelativeLayout
        android:id="@+id/headlayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/blue"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <ImageButton
                android:id="@+id/back_login_button"
                android:layout_width="28dp"
                android:layout_height="16dp"
                android:layout_centerInParent="true"
                android:layout_marginLeft="20dp"
                android:background="#00000000"
                android:scaleType="fitXY"

                android:src="@drawable/back_login" />
        </RelativeLayout>


        <LinearLayout

            android:id="@+id/editText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/search_rom"
            android:gravity="center_vertical">

            <ImageButton

                android:focusableInTouchMode="true"
                android:id="@+id/search_button"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:scaleType="fitXY"
                android:src="@drawable/search_img" />

            <EditText
                android:id="@+id/search_msg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="#00000000"
                android:hint="搜索参会人/会议号/会议时间"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <RelativeLayout

            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/callselect"
                android:layout_width="26dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/call_room"

                />
        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/headlayout"
        android:background="#F0F0F0"
        >
        <LinearLayout
            android:background="#FFFFFF"
            android:padding="5dp"
            android:orientation="vertical"
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>


    </ScrollView>


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/green"
        android:text="预约会议"
        android:textColor="@color/white"
        android:textSize="18sp" />
</RelativeLayout>
